doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css", rel='stylesheet')
    link(href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js")
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-primary( role="navigation" )
        .navbar-header
            button.navbar-toggler( type="button", data-toggle="collapse", data-target="#navbar-inverse", aria-expanded="false", aria-controls="navbar")
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
        a.navbar-brand(href="/") Демо

        .collapse.navbar-collapse
            ul.navbar-nav.mr-auto.mt-2.mt-lg-0
                li.nav-item.active: a.nav-link( href="/") Главная
                li.nav-item: a.nav-link( href="/post/list" ) Посты
                li.nav-item: a.nav-link( href="/users" ) Пользователи
                li.nav-item: a.nav-link( href="/clinic" ) Клиники
                li.nav-item: a.nav-link( href="/city" ) Город
                li.nav-item: a.nav-link( href="/doctor" ) Доктор
                li.nav-item: a.nav-link( href="/speciality" ) Специальность
            ul.navbar-nav.ml-auto.my-2.my-lg-0
              li.nav-item.active: a.nav-link( href="/auth/sign-in") Вход
    .content
        if failureFlash != null
            .alert.alert-danger.alert-dismissible.fade.show(role=alert) #{failureFlash}
                button.close(data-dismiss="alert" aria-label="Close")
                    span(aria-hidden="true") &times;
        if successFlash != null
            .alert.alert-success.alert-dismissible.fade.show(role=alert) #{successFlash}
                button.close(data-dismiss="alert" aria-label="Close")
                    span(aria-hidden="true") &times;
        block content
