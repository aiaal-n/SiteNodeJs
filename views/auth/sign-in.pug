extends ../layout

block content
    h1= title

    form.login-form.form-horizontal(method='post', role='form')
        input(name='_csrf', type='hidden', value=csrfToken)

        div.form-group
            label.col-sm-4 Логин
            div.col-sm-8
                input.form-control(
                placeholder='Логин',
                required=true,
                name='username',
                type='text')


        div.form-group
            label.col-sm-4 Пароль
            div.col-sm-8
                input.form-control(
                placeholder='Пароль',
                required=true,
                name='password',
                type='password')

        div.form-group
            div.col-sm-offset-4.col-sm-8
                button.login.btn.btn-primary(type='submit') Войти