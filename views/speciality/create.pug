extends ../layout

block content
    h3 Добавление специальности

    form.login-form.form-horizontal(method='post', role='form')
        input(name='_csrf', type='hidden', value=csrfToken)

        div.form-group
            label.col-sm-4 Наименование
            div.col-sm-8
                input.form-control(
                placeholder='Наименование',
                required=true,
                name='name',
                type='text')

        div.form-group
            label.col-sm-4 Клиника
            div.col-sm-8
                select.form-control(
                required=true,
                name='city')
                    each clinic in clinics
                        option(value=clinic.id) #{clinic.name}

        div.form-group
            div.col-sm-offset-4.col-sm-8
                button.login.btn.btn-primary(type='submit') Сохранить